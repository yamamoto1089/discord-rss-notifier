{
  "name": "discord-rss-notifier",
  "version": "1.0.0",
  "description": "RSS to Discord notifier bot using GitHub Actions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run lint && npm run format:check"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "discord",
    "rss",
    "bot",
    "notification",
    "github-actions"
  ],
  "author": "",
  "license": "MIT",
  "stylelint": {
    "extends": [],
    "ignoreFiles": [
      "**/*.js",
      "**/*.mjs",
      "**/*.ts",
      "**/*.tsx",
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
